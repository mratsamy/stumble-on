{
    "compilerOptions": {
        "target": "es2020",
        "baseUrl": ".",
        "paths": {
            "~components/*": ["components/*"], // this is only for VSC type checking, actual settings in next.config.js
            "~api/*": ["api/*"],
            "~lib/*": ["lib/*"]
        },
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "exclude": ["node_modules"],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "api/test.js"],
    "files": ["types/custom.d.ts"]
}
